<Window x:Class="WpfImageClipper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfImageClipper"
        xmlns:ctrls="clr-namespace:WpfImageClipper.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom"
                    Orientation="Horizontal"
                    Margin="8">
            <Button Content="打开图像"
                    Click="OpenFileButton_Click"/>
            <Button Content="清空路径" Margin="4 0 0 0"
                    Click="ClearPathButton_Click"/>
            <Button Content="导出" Margin="4 0 0 0"
                    Click="ExportButton_Click"/>
        </StackPanel>
        <ctrls:ImageClipper x:Name="_imageClipper"/>
    </DockPanel>
</Window>
